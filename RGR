#include <iostream>
#include <locale>
using namespace std;

void yn_check(int &letter,char name) {
	char flg;
	cout << "Инвертировать выход элемента "<< name <<"?(Y/N)\n";
	cin >> flg;
	if (flg == 'Y') 
		letter = 1;
	else if (flg == 'N') 
		letter = -1;
	else {
		cout << "Ответ непредусмотрен программой, пожалуйста, используйте Y/N\n";
		yn_check(letter,name);
	} // защита от дурака
}
void x_check(int &x,int number){
	char flg;
	cout << "Введите x"<<number<<"(0/1): \n";
	cin >> flg;
	if (flg == '0')
		x = 0;
	else if (flg == '1')
		x = 1;
	else {
		cout << "Данный ввод непредусмотрен программой, пожалуйста, используйте 0/1\n";
		x_check(x, number);
	}
}
int main() {
	setlocale(LC_ALL, "Russian");
	cout << "Выполнял работу: " << "Камышев Данила Дмитриевич\n";
	cout << "Группа: " << "ИС-29\n";
	cout << "Задание: " << "По имеющейся логической схеме и выходным сигналам определить значения выходных сигналов. Предусмотреть возможность редактирования (инвертирование выходов отдельных логических элементов) схемы пользователем\n";
	cout << "СХЕМА ПСЕВДО-ГРАФИКОЙ\n"; // дописать



	int A = 0, B = 0, Y = 0;
	yn_check(A,'A');
	yn_check(B,'B');
	yn_check(Y,'Y');
	int x1 = 2, x2 = 2;
	x_check(x1,1);
	x_check(x2,2);

	bool logA;  // оформление логического блока A
	if (A == 1)
		logA = !(x1 && (!x2));
	else
		logA = (x1 && (!x2));

	bool logB; // оформление логического блока B
	if (B == 1)
		logB = !((!x1) && x2);
	else
		logB = ((!x1) && x2);

	bool logY; // оформление логического блока Y
	if (Y == 1)
		logY = !(logA || logB);
	else
		logY = (logA || logB);

	cout << "Значение Y равно: " << logY;

	return 0;
}
